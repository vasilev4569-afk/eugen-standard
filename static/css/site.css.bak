/* =========================
   Eugen Standard — site.css
   Clean single-source CSS
   ========================= */

:root{
  --bg:#ffffff;
  --text:#111111;
  --muted:#6b7280;
  --border:#e5e7eb;
  --soft:#f6f6f6;
  --radius:16px;
}

*{ box-sizing:border-box; }

body{
  margin:0;
  font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
  line-height:1.55;
  background:var(--bg);
  color:var(--text);
}

img{ max-width:100%; height:auto; display:block; }

a{ color:inherit; text-decoration:none; }
a:hover{ text-decoration:underline; }

.container{
  max-width:1200px;
  margin:0 auto;
  padding:0 24px;
}

.site-main{
  padding:24px 0 56px;
}

.small{ font-size:13px; }
.muted{ color:var(--muted); }

/* ===== Header / Nav ===== */
.site-header{
  position:sticky;
  top:0;
  z-index:10;
  background:rgba(255,255,255,.92);
  backdrop-filter:saturate(180%) blur(8px);
  border-bottom:1px solid var(--border);
}

.header-inner{
  min-height:64px;
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
}

.brand{
  font-weight:700;
  white-space:nowrap;
}

.topnav{
  display:flex;
  flex-wrap:wrap;
  gap:12px;
}

.topnav a{
  padding:8px 10px;
  border-radius:10px;
  white-space:nowrap;
}

.topnav a:hover{
  background:#fafafa;
  text-decoration:none;
}

/* ===== Footer ===== */
.site-footer{
  border-top:1px solid var(--border);
  padding:20px 0;
}

.footer-inner{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
  flex-wrap:wrap;
}

.footnav{
  display:flex;
  gap:12px;
  flex-wrap:wrap;
}

.footnav a{ color:var(--muted); }

/* ===== Typography ===== */
h1,h2,h3{ line-height:1.2; margin:0 0 12px; }
h1{ font-size:32px; letter-spacing:-.2px; }
p{ margin:0 0 12px; }

.lead{
  font-size:18px;
  color:var(--muted);
  margin-top:8px;
  max-width:none;
}

/* ===== Capacity switch ===== */
.cap-switch{ display:flex; gap:10px; flex-wrap:wrap; margin:12px 0 18px; }
.cap-btn{
  display:inline-block; padding:8px 12px;
  border:1px solid #ddd; border-radius:10px;
  background:#fafafa; color:#111;
}
.cap-btn.is-active{ background:#111; color:#fff; border-color:#111; }

/* =========================================================
   TABLES
   ========================================================= */

table{
  width:100%;
  border-collapse:collapse;
  margin-top:12px;
}

/* перенос только по пробелам */
th, td{
  word-break: normal;
  overflow-wrap: normal;
  hyphens: none;
}

.meta-table th, .meta-table td,
.data-table th, .data-table td{
  border:1px solid #e1e1e1;
  padding:10px;
  text-align:left;
  vertical-align:top;
}

.meta-table th, .data-table th{
  background:var(--soft);
  font-weight:600;
}

.meta-table th{
  width:240px;
  white-space:nowrap;
}

.data-table td:not(:first-child),
.data-table th:not(:first-child){
  text-align:center;
  font-variant-numeric: tabular-nums;
}

/* hover строк */
@media (hover:hover){
  table tbody tr:hover td,
  table tbody tr:hover th{
    background:#fcfcfc;
  }
}

.kpi{ font-weight:700; }

/* =========================================================
   Test unit grid (table left + photo right)
   Цель: верх и  совпадают с таблицей.
   елается через фикс высоты строк таблицы (6 строк).
   ========================================================= */

.testunit-grid{
  display:grid;
  grid-template-columns: 1fr 1fr;
  gap:24px;
  align-items:start;
  margin:16px 0 22px;
}

/* бираем внешние отступы у таблицы внутри блока (важно из-за inline <style> в контенте) */
.testunit-left .meta-table{
  margin-top:0 !important;
  margin-bottom:0 !important;
}

/* Фиксируем высоту строк, чтобы таблица имела предсказуемую высоту */
.testunit-left .meta-table tr{
  height:52px !important;
}
.testunit-left .meta-table th,
.testunit-left .meta-table td{
  padding:10px !important;
  line-height:1.25 !important;
}

/* ысота фото-карты = высота таблицы (6*52=312 + границы ≈ 314) */
.testunit-photo{
  margin:0;
  width:100%;
  border:1px solid var(--border);
  border-radius:var(--radius);
  background:transparent;     /* <-- серого фона Т */
  padding:0;
  overflow:hidden;

  height:314px;              /* ключ */
  display:flex;
  align-items:center;
  justify-content:center;
}

.testunit-photo-img{
  max-width:100%;
  max-height:100%;
  width:auto;
  height:auto;
  object-fit:contain;
  object-position:center;
}

/* =========================================================
   Responsive
   ========================================================= */

/* а планшете/меньше — складываем в колонку и отключаем "фикс высоты" */
@media (max-width: 1100px){
  .testunit-grid{
    grid-template-columns: 1fr;
  }

  /* Таблицу возвращаем к естественной высоте */
  .testunit-left .meta-table tr{
    height:auto !important;
  }

  /* Фото становится нормальным блоком */
  .testunit-photo{
    height:260px;
  }
}

/* Mobile base */
@media (max-width: 768px){
  .container{ padding:0 16px; }
  h1{ font-size:24px; }
  .lead{ font-size:16px; }

  .header-inner{
    flex-direction:column;
    align-items:flex-start;
    gap:10px;
  }

  .topnav{
    width:100%;
    overflow-x:auto;
    gap:8px;
    padding-bottom:6px;
  }

  .topnav a{ padding:6px 8px; }

  .footer-inner{
    flex-direction:column;
    align-items:flex-start;
    gap:10px;
  }

  .meta-table th{ width:180px; }
}

/* Hide attempts only under 576px:
   columns order: Metric | Average(Median) | Attempt1 | Attempt2 | Attempt3 */
@media (max-width: 576px){
  .data-table th:nth-child(n+3),
  .data-table td:nth-child(n+3){
    display:none;
  }

  .data-table th:nth-child(2),
  .data-table td:nth-child(2){
    text-align:right;
    font-weight:700;
  }
}

@media (min-width: 577px){
  .data-table th:nth-child(n+3),
  .data-table td:nth-child(n+3){
    display:table-cell;
  }
}
